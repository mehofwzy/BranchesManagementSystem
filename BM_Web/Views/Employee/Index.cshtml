@model List<BM_Web.Models.Employee>

<h2>Employee List</h2>

<a href="@Url.Action("Create")" class="btn btn-primary">Add Employee</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Role</td>
                <td style="text-align:center">
                    <a href="@Url.Action("Edit", new { id = employee.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = employee.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
